<div class="max-w-7xl mx-auto px-4">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">AI Generations</h1>
    <p class="text-gray-600">Your flashcard generation history</p>
  </div>

  <% if @generations.empty? %>
    <div class="p-12 text-center">
      <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
      </svg>
      <h2 class="text-xl font-semibold text-gray-900 mb-2">No generations yet</h2>
      <p class="text-gray-600 mb-6">Generate your first set of flashcards with AI</p>
      <%= link_to new_generation_path, class: "inline-flex items-center px-6 py-3 text-sm font-medium text-white bg-indigo-600 rounded-lg hover:bg-indigo-700 transition-colors duration-200 shadow-sm" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
        </svg>
        Generate with AI
      <% end %>
    </div>
  <% else %>
    <div class="space-y-4">
      <% @generations.each do |generation| %>
        <%= link_to generation_path(generation), class: "block" do %>
          <div class="bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow duration-200 p-6">
            <div class="flex items-start justify-between">
              <div class="flex-1 min-w-0">
                <!-- Generation Info -->
                <div class="flex items-center gap-3 mb-3">
                  <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium bg-purple-100 text-purple-800">
                    <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                    AI Generated
                  </span>
                  <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
                    <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                    </svg>
                    <%= pluralize(generation.flashcards.count, 'card') %>
                  </span>
                </div>

                <!-- Source Text Preview -->
                <div class="mb-3">
                  <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-1">Source Text</h3>
                  <p class="text-base text-gray-900 line-clamp-2"><%= generation.source_text %></p>
                </div>

                <!-- Timestamp -->
                <div class="flex items-center text-sm text-gray-600">
                  <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>Generated <%= time_ago_in_words(generation.created_at) %> ago</span>
                </div>
              </div>

              <!-- Arrow Icon -->
              <div class="ml-4 flex-shrink-0">
                <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- Pagination -->
    <div class="mt-8 flex justify-center">
      <%= will_paginate @generations,
          class: "inline-flex items-center gap-2",
          previous_label: "← Previous",
          next_label: "Next →",
          inner_window: 2,
          outer_window: 1 %>
    </div>

    <!-- Action Buttons -->
    <div class="mt-8 flex justify-center">
      <%= link_to new_generation_path, class: "inline-flex items-center px-6 py-3 text-sm font-medium text-white bg-indigo-600 rounded-lg hover:bg-indigo-700 transition-colors duration-200 shadow-sm" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Generate New Flashcards
      <% end %>
    </div>
  <% end %>
</div>
