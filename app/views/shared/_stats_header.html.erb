<div class="bg-gradient-to-br from-indigo-600 via-purple-600 to-pink-500 text-white rounded-2xl shadow-2xl p-8 mb-8">
  <!-- Header -->
  <div class="text-center mb-8">
    <h2 class="text-3xl md:text-4xl font-bold mb-2">
      âœ¨ AI-Powered Learning
    </h2>
    <p class="text-indigo-100 text-lg">
      Join thousands of learners creating flashcards effortlessly with AI
    </p>
  </div>

  <!-- Stats Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Your Stats -->
    <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20">
      <div class="flex items-center gap-2 mb-4">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
        <h3 class="text-xl font-bold">Your Stats</h3>
      </div>

      <div class="space-y-4">
        <!-- User AI Acceptance Rate -->
        <div>
          <div class="flex items-center justify-between mb-1">
            <span class="text-sm font-medium text-indigo-100">AI Acceptance Rate</span>
            <span class="text-2xl font-bold"><%= user_stats[:ai_acceptance_rate] %>%</span>
          </div>
          <div class="w-full bg-white/20 rounded-full h-2">
            <div class="bg-gradient-to-r from-green-400 to-emerald-500 h-2 rounded-full transition-all duration-500"
                 style="width: <%= [user_stats[:ai_acceptance_rate], 100].min %>%"></div>
          </div>
        </div>

        <!-- User AI Flashcards Percentage -->
        <div>
          <div class="flex items-center justify-between mb-1">
            <span class="text-sm font-medium text-indigo-100">AI-Generated Cards</span>
            <span class="text-2xl font-bold"><%= user_stats[:ai_flashcards_percentage] %>%</span>
          </div>
          <div class="w-full bg-white/20 rounded-full h-2">
            <div class="bg-gradient-to-r from-purple-400 to-pink-500 h-2 rounded-full transition-all duration-500"
                 style="width: <%= [user_stats[:ai_flashcards_percentage], 100].min %>%"></div>
          </div>
        </div>

        <!-- User Total Cards -->
        <div class="flex items-center justify-between pt-2 border-t border-white/20">
          <span class="text-sm font-medium text-indigo-100">Total Cards</span>
          <span class="text-xl font-bold"><%= user_stats[:total_flashcards] %></span>
        </div>
      </div>
    </div>

    <!-- Community Stats -->
    <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20">
      <div class="flex items-center gap-2 mb-4">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        <h3 class="text-xl font-bold">Community Stats</h3>
      </div>

      <div class="space-y-4">
        <!-- System AI Acceptance Rate -->
        <div>
          <div class="flex items-center justify-between mb-1">
            <span class="text-sm font-medium text-indigo-100">AI Acceptance Rate</span>
            <span class="text-2xl font-bold"><%= system_stats[:ai_acceptance_rate] %>%</span>
          </div>
          <div class="w-full bg-white/20 rounded-full h-2">
            <div class="bg-gradient-to-r from-green-400 to-emerald-500 h-2 rounded-full transition-all duration-500"
                 style="width: <%= [system_stats[:ai_acceptance_rate], 100].min %>%"></div>
          </div>
        </div>

        <!-- System AI Flashcards Percentage -->
        <div>
          <div class="flex items-center justify-between mb-1">
            <span class="text-sm font-medium text-indigo-100">AI-Generated Cards</span>
            <span class="text-2xl font-bold"><%= system_stats[:ai_flashcards_percentage] %>%</span>
          </div>
          <div class="w-full bg-white/20 rounded-full h-2">
            <div class="bg-gradient-to-r from-purple-400 to-pink-500 h-2 rounded-full transition-all duration-500"
                 style="width: <%= [system_stats[:ai_flashcards_percentage], 100].min %>%"></div>
          </div>
        </div>

        <!-- System Stats Summary -->
        <div class="flex items-center justify-between pt-2 border-t border-white/20">
          <div class="flex-1">
            <div class="text-sm font-medium text-indigo-100">Total Cards</div>
            <div class="text-xl font-bold"><%= number_with_delimiter(system_stats[:total_flashcards]) %></div>
          </div>
          <div class="flex-1 text-right">
            <div class="text-sm font-medium text-indigo-100">Active Users</div>
            <div class="text-xl font-bold"><%= system_stats[:total_users] %></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Call to Action -->
  <div class="mt-6 text-center">
    <p class="text-sm text-indigo-100">
      <% if user_stats[:ai_flashcards_percentage] < 75 %>
        ðŸ’¡ Tip: Use AI generation to create cards faster! Our target is 75% AI-generated cards.
      <% else %>
        ðŸŽ‰ Amazing! You're making great use of AI-powered learning!
      <% end %>
    </p>
  </div>
</div>
