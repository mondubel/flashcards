<div class="max-w-2xl mx-auto px-4">
  <div class="bg-white rounded-2xl shadow-xl p-8">
    <div class="mb-6">
      <h1 class="text-2xl font-bold text-gray-900">Create New Flashcard</h1>
      <p class="mt-1 text-sm text-gray-600">Add a new card to your collection</p>
    </div>

    <%= form_with model: @flashcard, class: "space-y-6" do |f| %>
      <div>
        <%= f.label :front, "Front (Question)", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_area :front,
            rows: 3,
            placeholder: "Enter the question or term...",
            class: "w-full px-4 py-3 border rounded-lg transition resize-none #{@flashcard.errors[:front].any? ? 'border-red-300 bg-red-50 focus:ring-2 focus:ring-red-500 focus:border-transparent' : 'border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-transparent'}",
            maxlength: 200 %>
        <% if @flashcard.errors[:front].any? %>
          <p class="mt-1 text-sm text-red-600">
            <%= @flashcard.errors.full_messages_for(:front).join(', ') %>
          </p>
        <% else %>
          <p class="mt-1 text-xs text-gray-500">Maximum 200 characters</p>
        <% end %>
      </div>

      <div>
        <%= f.label :back, "Back (Answer)", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_area :back,
            rows: 5,
            placeholder: "Enter the answer or definition...",
            class: "w-full px-4 py-3 border rounded-lg transition resize-none #{@flashcard.errors[:back].any? ? 'border-red-300 bg-red-50 focus:ring-2 focus:ring-red-500 focus:border-transparent' : 'border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-transparent'}",
            maxlength: 500 %>
        <% if @flashcard.errors[:back].any? %>
          <p class="mt-1 text-sm text-red-600">
            <%= @flashcard.errors.full_messages_for(:back).join(', ') %>
          </p>
        <% else %>
          <p class="mt-1 text-xs text-gray-500">Maximum 500 characters</p>
        <% end %>
      </div>

      <div class="flex items-center gap-3 pt-4">
        <%= f.submit "Create Flashcard",
            class: "flex-1 py-3 px-4 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition-colors duration-200 shadow-sm" %>
        <%= link_to "Cancel", flashcards_path,
            class: "flex-1 py-3 px-4 bg-white border border-gray-300 hover:bg-gray-50 text-gray-700 font-medium rounded-lg transition-colors duration-200 text-center" %>
      </div>
    <% end %>
  </div>

  <div class="mt-6 text-center">
    <p class="text-sm text-gray-600">
      Or
      <%= link_to "generate flashcards with AI", new_generation_path, class: "text-indigo-600 hover:text-indigo-700 font-medium transition" %>
    </p>
  </div>
</div>
