<div class="max-w-7xl mx-auto px-4">
  <%= render partial: 'shared/stats_header', locals: { user_stats: @user_stats, system_stats: @system_stats } %>

  <% if @flashcards.empty? %>
    <div class="p-12 text-center">
      <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
      </svg>
      <h2 class="text-xl font-semibold text-gray-900 mb-2">No flashcards yet</h2>
      <p class="text-gray-600 mb-6">Get started by creating your first flashcard or generating them with AI</p>
      <div class="flex items-center justify-center gap-3">
        <%= link_to new_flashcard_path, class: "inline-flex items-center px-6 py-3 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition shadow-sm" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Add Card
        <% end %>
        <%= link_to new_generation_path, class: "inline-flex items-center px-6 py-3 text-sm font-medium text-white bg-indigo-600 rounded-lg hover:bg-indigo-700 transition-colors duration-200 shadow-sm" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
          Generate with AI
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
      <% @flashcards.each do |flashcard| %>
        <div class="bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow duration-200 p-6">
          <!-- Source Badge and Action Icons -->
          <div class="flex items-center justify-between mb-4">
            <% case flashcard.source %>
            <% when 'manual' %>
              <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                </svg>
                Manual
              </span>
            <% when 'ai_full' %>
              <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
                AI Generated
              </span>
            <% when 'ai_edited' %>
              <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
                AI Edited
              </span>
            <% end %>

            <!-- Action Icons -->
            <div class="flex items-center gap-2">
              <%= link_to edit_flashcard_path(flashcard),
                  class: "p-1.5 text-gray-600 hover:text-indigo-600 hover:bg-gray-100 rounded-lg transition",
                  title: "Edit" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
              <% end %>
              <%= button_to flashcard_path(flashcard), method: :delete,
                  data: { turbo_confirm: "Are you sure you want to delete this flashcard?" },
                  class: "p-1.5 text-gray-600 hover:text-red-600 hover:bg-red-50 rounded-lg transition cursor-pointer",
                  title: "Delete",
                  form: { class: "inline" } do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
              <% end %>
            </div>
          </div>

          <%= link_to flashcard_path(flashcard), class: "block" do %>
            <!-- Front Content -->
            <div class="mb-4">
              <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-1">Question</h3>
              <p class="text-base font-medium text-gray-900 line-clamp-3"><%= flashcard.front %></p>
            </div>

            <!-- Back Content -->
            <div>
              <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-1">Answer</h3>
              <p class="text-sm text-gray-700 line-clamp-3"><%= flashcard.back %></p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Pagination -->
    <div class="mt-8 flex justify-center">
      <%= will_paginate @flashcards,
          class: "inline-flex items-center gap-2",
          previous_label: "← Previous",
          next_label: "Next →",
          inner_window: 2,
          outer_window: 1 %>
    </div>
  <% end %>
</div>
