<div class="space-y-6">
  <div>
    <h2 class="text-2xl font-bold text-gray-900">Change your password</h2>
    <p class="mt-1 text-sm text-gray-600">Choose a strong password for your account</p>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div>
      <%= f.label :password, "New password", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <% if @minimum_password_length %>
        <span class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</span>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
          class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition" %>
    </div>

    <div>
      <%= f.label :password_confirmation, "Confirm new password", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
          class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition" %>
    </div>

    <div>
      <%= f.submit "Change my password", class: "w-full py-2.5 px-4 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition duration-200 shadow-sm hover:shadow-md" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
