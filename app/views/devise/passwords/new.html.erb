<div class="space-y-6">
  <div>
    <h2 class="text-2xl font-bold text-gray-900">Reset password</h2>
    <p class="mt-1 text-sm text-gray-600">Enter your email to receive reset instructions</p>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
          class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition" %>
    </div>

    <div>
      <%= f.submit "Send reset instructions", class: "w-full py-2.5 px-4 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition duration-200 shadow-sm hover:shadow-md" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
